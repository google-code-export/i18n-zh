"  DAV svn\n"
"  SVNParentPath /var/svn\n"
"\n"
"  # how to authenticate a user\n"
"  AuthType Basic\n"
"  AuthName \"Subversion repository\"\n"
"  AuthUserFile /path/to/users/file\n"
"\n"
"  # only authenticated users may access the repository\n"
"  Require valid-user\n"
"&lt;/Location&gt;\n"
