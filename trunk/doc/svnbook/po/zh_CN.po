"  AuthType Basic\n"
"  AuthName \"Subversion repository\"\n"
"  AuthUserFile /etc/svn-auth-file\n"
"  Require valid-user\n"
"&lt;/Location&gt;\n"
msgstr ""
"\n"
"&lt;Location /svn&gt;\n"
"  DAV svn\n"
"  SVNParentPath /usr/local/svn\n"
"  AuthType Basic\n"
"  AuthName \"Subversion repository\"\n"
"  AuthUserFile /etc/svn-auth-file\n"
