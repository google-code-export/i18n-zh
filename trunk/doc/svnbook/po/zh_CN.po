#, no-wrap
msgid ""
"\n"
"/\n"
"   calc/\n"
"      trunk/\n"
"      tags/\n"
"      branches/\n"
"   calendar/\n"
"      trunk/\n"
"      tags/\n"
"      branches/\n"
"   spreadsheet/\n"
"      trunk/\n"
"      tags/\n"
"      branches/\n"
"   …\n"
msgstr ""
