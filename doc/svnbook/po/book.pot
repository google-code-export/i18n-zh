#.(screen)
#: ../source/book.xml:26151
#, no-wrap
msgid "\n$ svnlook dirs-changed -r 40 /var/svn/repos\ntrunk/vendors/deli/\n"
msgstr ""

#.(refname)
#: ../source/book.xml:26164
msgid "svnlook help"
msgstr ""

#.(programlisting)
#: ../source/book.xml:26171
#, no-wrap
msgid "Also svnlook -h and svnlook -?."
msgstr ""

