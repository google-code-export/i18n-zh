#.(para)
#: ../source/book.xml:21674
msgid "Schedule"
msgstr ""

#.(para)
#: ../source/book.xml:21677
msgid "Copied from URL"
msgstr ""

#.(para)
#: ../source/book.xml:21680
msgid "Copied from rev"
msgstr ""

#.(para)
#: ../source/book.xml:21683
msgid "Text last updated"
msgstr ""

#.(para)
#: ../source/book.xml:21686
msgid "Properties last updated"
msgstr ""

#.(para)
#: ../source/book.xml:21689
msgid "Checksum"
msgstr ""

#.(para)
#: ../source/book.xml:21692
msgid "Conflict previous base file"
msgstr ""

#.(para)
#: ../source/book.xml:21695
msgid "Conflict previous working file"
msgstr ""

#.(para)
#: ../source/book.xml:21698
msgid "Conflict current base file"
