#: ../source/book.xml:22509
msgid "To merge changes to a single file:"
msgstr ""

#.(screen)
#: ../source/book.xml:22510
#, no-wrap
msgid "\n$ cd myproj\n$ svn merge -r 30:31 thhgttg.txt \nU  thhgttg.txt\n"
msgstr ""

