msgstr ""

#.(para)
#: ../source/book.xml:21637
msgid "Repository root"
msgstr ""

#.(para)
#: ../source/book.xml:21640
msgid "Repository UUID"
msgstr ""

#.(para)
#: ../source/book.xml:21646
msgid "Node kind"
msgstr ""

#.(para)
#: ../source/book.xml:21649
msgid "Last changed author"
msgstr ""

#.(para)
#: ../source/book.xml:21652
msgid "Last changed revision"
msgstr ""

#.(para)
#: ../source/book.xml:21655
msgid "Last changed date"
msgstr ""

#.(para)
#: ../source/book.xml:21658
